{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "short_name": "__MSG_shortName__",
  "version": "1.7",

  "description": "__MSG_extensionDescription__",

  "browser_specific_settings": {
    "gecko": {
      "id": "calc@pcstat.ru"
    }
  },

  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },

  "page_action": {
    "default_title": "__MSG_shortName__",
    "default_popup": "sidebar.html"
  },

  "sidebar_action": {
    "default_title": "__MSG_sidebarTitle__",
    "default_panel": "sidebar.html",
    "default_icon": "logo.png"
  },

  "background": {
    "scripts": [
      "browser-polyfill.js",
      "sidebar.js",
      "sidebar-chrome.js"
    ],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://virtualsoccer.ru/mng_order.php*"],
      "js": [
        "browser-polyfill.js",
        "calc.js",
        "weather-table.js",
        "content-chrome.js"
      ]
    },
    {
      "matches": ["*://virtualsoccer.ru/roster_m.php*"],
      "js": [
        "browser-polyfill.js",
        "analytics.js"
      ]
    }
  ],

  "permissions": [
    "declarativeContent",
    "storage"
  ],

  "author": "__MSG_author__",
  "default_locale": "en"

}
