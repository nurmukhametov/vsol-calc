{

  "manifest_version": 2,
  "name": "__MSG_extensionName__",
  "short_name": "__MSG_shortName__",
  "version": "1.3",

  "description": "__MSG_extensionDescription__",

  "browser_specific_settings": {
    "gecko": {
      "id": "calc@pcstat.ru"
    }
  },

  "page_action": {
    "default_icon": {
      "32": "logo.png"
    },
    "default_title": "Calc_S",
    "default_popup": "sidebar.html"
  },

  "sidebar_action": {
    "default_title": "__MSG_sidebarTitle__",
    "default_panel": "sidebar.html",
    "default_icon": "logo.png"
  },

  "background": {
    "scripts": ["browser-polyfill.js", "sidebar.js"],
    "persistent": false
  },

  "content_scripts": [
    {
      "matches": ["*://virtualsoccer.ru/mng_order.php*"],
      "js": [
        "browser-polyfill.js",
        "calc.js",
        "content-chrome.js"
      ]
    }
  ],

  "permissions": [
    "*://pcstat.ru/*",
    "tabs",
    "declarativeContent",
    "storage"
  ],

  "author": "__MSG_author__",
  "default_locale": "en"

}
