{

  "manifest_version": 2,
  "name": "Калькулятор силы стартового состава во ВСОЛ",
  "short_name": "Калькулятор",
  "version": "1.0",

  "description": "Подсчитывает силу команды в начале матча",

  "browser_specific_settings": {
    "gecko": {
      "id": "calc@pcstat.ru"
    }
  },

  "sidebar_action": {
    "default_title": "Калькулятор силы",
    "default_panel": "sidebar.html",
    "default_icon": "logo.png"
  },

  "content_scripts": [
    {
      "matches": ["*://virtualsoccer.ru/mng_order.php*"],
      "js": ["calc.js"]
    }
  ],

  "permissions": [
    "*://pcstat.ru/*",
    "tabs"
  ],

  "author": "Alexey Nurmukhametov"

}
